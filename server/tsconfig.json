{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2020",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "noUncheckedIndexedAccess": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "scripts/**/*"]
}
